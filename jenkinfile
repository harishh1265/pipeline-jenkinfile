pipeline {
			agent any 
			stages {
				stage('BUILD') {
					steps {
						sh '''
							#!/bin/bash 
							echo "build stage in Jenkinsfile"
							sleep 5
						'''
					}
				}
				stage('TEST1') {
					steps {
						sh 'echo "first stage test in Jenkinsfile"'
					}	
				}
				stage('TEST2') {
					steps {
						sh 'echo "Second stage test in Jenkinsfile"'
					}	
				}
				stage('DEPLOY') {
					steps {
						sh 'echo "Final DEPLOY stage in Jenkinsfile"'	
					}
				}
				stage('STATUS') {
					steps {
						sh 'echo "Pipeline job completed"'	
					}
				}
			}
		}
